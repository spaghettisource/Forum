@model Forum.Models.ForumThread

@{
    ViewBag.Title = "Create thread";
}

<h2>Create</h2>    
    
    @using (Html.BeginForm("Create", "ForumThread", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>ForumThread</legend>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>    
            
            <div class="editor-field">
                @Html.Hidden("SubForumId" ,TempData["SubForumId"])
                
            </div>
    
            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
    }
    
    <div>
        <a href="javascript:history.back()">Back</a>
        @*<a href="@Request.UrlReferrer.PathAndQuery.ToString()">Back</a>*@ 
    </div>

@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
}
